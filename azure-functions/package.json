{
  "name": "tds-integration-platform-functions",
  "version": "1.0.0",
  "description": "Azure Functions for TDS Integration Platform",
  "main": "src/functions/index.js",
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf node_modules package-lock.json",
    "fresh-install": "npm run clean && npm install",
    "audit-fix": "npm audit fix --force",
    "update": "npm update && npm audit fix"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "shared-services/**/*.js",
      "!shared-services/**/__tests__/**",
      "!shared-services/**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 10000,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.1",
    "@azure/functions": "^4.5.0",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "applicationinsights": "^2.9.8",
    "axios": "^1.6.7",
    "joi": "^17.12.0",
    "lodash": "^4.17.21",
    "mssql": "^10.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4"
  },
  "overrides": {
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "uuid": "^9.0.1",
    "inflight": "npm:@isaacs/inflight@^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "tds-integration-platform"
  },
  "keywords": [
    "azure-functions",
    "tds",
    "integration",
    "postcode",
    "property-management"
  ],
  "author": "Omar Lodhi",
  "license": "MIT"
}
