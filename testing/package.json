{
  "name": "tds-integration-testing",
  "version": "1.0.0",
  "description": "Testing suite for TDS Integration Platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=__tests__",
    "start:mock-salesforce": "node mock-services/mock-salesforce-api.js",
    "clean": "rimraf node_modules package-lock.json coverage",
    "fresh-install": "npm run clean && npm install"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "express": "^4.18.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "mock-services/**/*.js",
      "!mock-services/**/node_modules/**"
    ],
    "testMatch": [
      "**/integration/**/*.test.js",
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "setupFilesAfterEnv": []
  },
  "overrides": {
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "inflight": "npm:@isaacs/inflight@^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "testing",
    "integration",
    "tds",
    "jest"
  ],
  "author": "Omar Lodhi",
  "license": "MIT"
}
